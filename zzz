        <!-- Navigation Buttons -->
        <button class="button prev" onclick="prevPage()">◀ Prev</button>
        <button class="button next" onclick="nextPage()">Next ▶</button>
    </div>

    <script>
        let currentPage = 1;

        function showPage(page) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById('page' + page).classList.add('active');
            document.querySelector('.prev').style.display = (page === 1) ? 'none' : 'block';
            document.querySelector('.next').style.display = (page === 2) ? 'none' : 'block';
        }

        function nextPage() {
            if (currentPage < 2) {
                currentPage++;
                showPage(currentPage);
            }
        }

        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        }
    </script>
